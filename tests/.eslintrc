{
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "scheduleNextTick": true
  },
  "rules": {
    "max-len": ["error", 140, 2, {
      "ignoreUrls": true,
      "ignoreComments": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    // mocha
    "no-unused-expressions": 0
  }
}
