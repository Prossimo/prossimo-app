<select class="selectpicker"{{#if multiple }} multiple{{/if}}>
    {{#each options.ungrouped }}
    <option value="{{ value }}"{{#if is_selected}} selected{{/if}}>{{ title }}</option>
    {{/each}}
    {{#each options.grouped }}
    <optgroup label="{{ title }}">
        {{#each entries }}
        <option value="{{ value }}"{{#if is_selected}} selected{{/if}}>{{ title }}</option>
        {{/each}}
    </optgroup>
    {{/each}}
</select>
