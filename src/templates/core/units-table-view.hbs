<div class="units-table">
    <div class="units-table-contents">
        <div class="tabs-and-controls-container">
            <div class="tab-container">
                <ul class="nav nav-tabs">
                {{#each tabs }}
                    <li class="{{ @key }}{{#if is_active }} active{{/if}}"><a href="#{{ @key }}">{{ title }}</a></li>
                {{/each}}
                </ul>
            </div>
            <div class="units-table-controls show-{{ mode }} show-tab-{{ active_tab }}">
                <button class="btn btn-xs js-undo">Undo</button>
                <button class="btn btn-xs js-redo">Redo</button>
                <button class="btn js-reset-unit-options reset-unit-options disabled">
                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                    <span>Reset unit options</span>
                </button>
                <button class="btn js-remove-selected-items remove-selected-items disabled">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <span>Remove</span>
                </button>
                <button class="btn js-clone-selected-items clone-selected-items disabled">
                    <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                    <span>Clone</span>
                </button>
                <button class="btn js-add-new-unit add-new-unit">Add new unit</button>
                <button class="btn js-add-new-accessory add-new-accessory">Add new accessory</button>
            </div>
        </div>
        <div class="units-table-total-prices-container"></div>
        <div class="units-table-scroll-wrapper">
            <div class="handsontable-container"></div>
        </div>
    </div>
</div>
