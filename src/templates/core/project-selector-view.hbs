<select name="project-selector-dropdown" id="project-selector-dropdown" class="selectpicker show-tick" title="Choose a project" data-live-search="true">
    {{#each project_list}}
        <option
            {{#if is_selected }}selected{{/if}}
            value="{{ id }}"
            data-content="<span class='label label-dropdown'><em>#</em>{{ id }}</span><span class='title'>{{ project_name }}</span>"
        >
            {{ project_name }}
        </option>
    {{/each}}
</select>
