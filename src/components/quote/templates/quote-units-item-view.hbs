<table class="quote-unit-heading">
    <tbody><tr>
        <td class="primary-info{{#if show_price }} has-price{{#if price.discount }} has-discounted-price{{/if}}{{/if}}">
            <table>
                <tbody><tr>
                    <td class="ref_num">
                        <strong>Ref #</strong>
                        <span>{{ ref_num }}</span>
                    </td>
                    {{#unless is_subunit }}
                    <td class="mark">
                        <strong>Mark</strong>
                        <span>{{ mark }}</span>
                    </td>
                    <td class="quantity">
                        <strong>Quantity</strong>
                        <span>{{ quantity }}</span>
                    </td>
                    {{/unless}}
                    {{#if has_dummy_profile }}
                    <td class="no-profile-warning">
                        <p>
                            <i class="glyphicon glyphicon-warning-sign"></i>
                            Profile{{#if profile_name }} "{{ profile_name }}"{{/if}} selected for this unit doesn't exist.
                        </p>
                    </td>
                    {{/if}}
                </tr></tbody>
            </table>
        </td>
        {{#if show_price }}
        <td class="price">
            <ul class="unit-price">
                <li class="unit">
                    <strong>Unit Price</strong>
                    <span class="value">{{ price.unit }}</span>
                </li>
                <li class="subtotal">
                    <strong>Subtotal</strong>
                    <span class="value">{{ price.subtotal }}</span>
                </li>
            </ul>
        </td>
        {{#if price.discount }}
        <td class="price-discounted">
            <ul class="unit-price">
                {{#if price.discount }}<li class="discount">
                    <strong>Discount</strong>
                    <span class="value">{{ price.discount }}</span>
                </li>
                {{/if}}
                {{#if price.unit_discounted }}<li class="unit">
                    <strong>Unit Price w/Disc.</strong>
                    <span class="value">{{ price.unit_discounted }}</span>
                </li>
                {{/if}}
                {{#if price.subtotal_discounted }}<li class="subtotal">
                    <strong>Subtotal w/Disc.</strong>
                    <span class="value">{{ price.subtotal_discounted }}</span>
                </li>
                {{/if}}
            </ul>
        </td>
        {{/if}}
        {{/if}}
    </tr></tbody>
</table>

<table class="quote-unit{{#if is_subunit }} subunit{{else}} loneunit{{/if}} {{ responsive_mode }}">
    {{#unless is_subunit }}
    <thead>
        <tr>
            {{#if product_image }}
            <th class="product-image">Shop Drawing: <em>{{ product_image.title }}</em></th>
            {{else}}
                {{#if customer_image }}
                <th class="customer-image">Customer Image</th>
                {{/if}}
            {{/if}}
            {{#unless description_separate_row }}
            <th class="product-description">Product Description</th>
            {{/unless}}
        </tr>
    </thead>
    {{/unless}}
    <tbody><tr>
        {{#if product_image }}
        <td class="product-image{{#if customer_image }} has-customer-image{{/if}}">
            <div class="product-image-inner">
                {{#if product_image.img }}
                    <div class="image-wrapper"><img src="{{ product_image.img }}" alt=""></div>
                {{/if}}
            </div>
            {{#if customer_image }}
            <div class="customer-image-inner">
                <h5>Customer Image</h5>
                <div class="image-wrapper"><img src="{{ customer_image }}" alt=""></div>
            </div>
            {{/if}}
        </td>
        {{else}}
            {{#if customer_image }}
            <td class="customer-image">
                <div class="customer-image-inner">
                    <div class="image-wrapper"><img src="{{ customer_image }}" alt=""></div>
                </div>
            </td>
            {{/if}}
        {{/if}}
        {{#unless description_separate_row }}
        @require( './partials/quote-unit-product-description.hbs' )
        {{/unless}}
    </tr>
    {{#if description_separate_row }}
    <tr>
        @require( './partials/quote-unit-product-description.hbs' )
    </tr>
    {{/if}}
    </tbody>
</table>
