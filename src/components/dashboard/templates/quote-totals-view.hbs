<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Quote Totals</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-4">Grand Total</label>
                <div class="col-sm-8">{{ grand_total }}</div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Total Cost</label>
                <div class="col-sm-8">{{ total_cost }}</div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Gross Profit</label>
                <div class="value col-sm-8">{{ gross_profit }}</div>
            </div>
            <div class="{{#if is_profit_negative }}is-negative{{/if}}{{#if is_profit_above_threshold }} is-good{{/if}} form-group">
                <label class="col-sm-4">Net Profit</label>
                <div class="value col-sm-8">{{ net_profit }} <span class="percent">({{ net_profit_percent }} of Grand Total)</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Total Area</label>
                <div class="col-sm-8">{{{ total_area }}}</div>
            </div>
            <div class="form-group" title="Subtotal for Units / Total Area">
                <label class="col-sm-4">Avg. Price/ft<sup>2</sup></label>
                <div class="col-sm-8">{{{ price_per_square_foot }}}</div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Total Unit Types</label>
                <div class="col-sm-8">{{{total_unit_types}}}</div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Total # of Units</label>
                <div class="col-sm-8">{{{total_of_units}}}</div>
            </div>
            <div class="table-responsive">
                <table class="table table-condensed">
                    <thead>
                    <tr>
                        <th>Profile System</th>
                        <th>Units</th>
                        <th>#</th>
                        <th>Total ft<sup>2</sup></th>
                        <th>$ / ft<sup>2</sup></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each data_summary}}
                        <tr>
                            <th>{{{profile_name}}}</th>
                            <td>{{{total_types}}}</td>
                            <td>{{{total_quantity}}}</td>
                            <td>{{{total_area}}}</td>
                            <td>{{{price_per_square_foot}}} / ft<sup>2</sup></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
