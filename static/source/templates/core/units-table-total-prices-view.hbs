<ul>
    <li>
        <strong>Grand Total{{#if is_price_estimated}} <small>(est.)</small>{{/if}}</strong>
        <span>{{ grand_total }}</span>
    </li>
    <li>
        <strong>Total Cost{{#if is_price_estimated}} <small>(est.)</small>{{/if}}</strong>
        <span>{{ total_cost }}</span>
    </li>
    <li>
        <strong>Gross Profit{{#if is_price_estimated}} <small>(est.)</small>{{/if}}</strong>
        <span class="value">{{ gross_profit }}</span>
    </li>
    <li class="{{#if is_profit_negative }}is-negative{{/if}}{{#if is_profit_above_threshold }} is-good{{/if}}">
        <strong>Net Profit{{#if is_price_estimated}} <small>(est.)</small>{{/if}}</strong>
        <span class="value">{{ net_profit }}</span>
        <span class="percent">({{ net_profit_percent }} of G.T.)
    </li>
    <li>
        <strong>Total Area</strong>
        <span>{{{ total_area }}}</span>
    </li>
    <li title="Subtotal for Units / Total Area">
        <strong>Avg. Price / ft<sup>2</sup></strong>
        <span>{{{ price_per_square_foot }}}</span>
    </li>
</ul>
