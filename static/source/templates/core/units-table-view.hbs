<div class="units-table{{#if is_always_visible }} always-visible{{/if}}">
    <div class="units-table-title">
        <p>Units list</p>
        <div class="units-table-controls {{ table_visibility }} show-{{ mode }}">
            <button class="btn js-add-new-unit add-new-unit">Add new unit</button>
            <button class="btn js-add-new-accessory add-new-accessory">Add new accessory</button>
        </div>
    </div>
    <div class="units-table-contents {{ table_visibility }}">
        <div class="tab-container">
            <ul class="nav nav-tabs">
            {{#each tabs }}
                <li class="{{ @key }}{{#if is_active }} active{{/if}}"><a href="#{{ @key }}">{{ title }}</a></li>
            {{/each}}
            </ul>
        </div>
        <div class="units-table-scroll-wrapper">
            <div class="handsontable-container"></div>
        </div>
    </div>
</div>
