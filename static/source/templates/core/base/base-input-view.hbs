<div class="value{{#if show_placeholder}} is-placeholder{{/if}}{{#if is_disabled }} disabled{{/if}}">
    {{{ readable_value }}}
    {{#if is_disabled }}
        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    {{else}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    {{/if}}
</div>
<div class="edit">
    <input autocomplete="off" type="{{ input_type }}" value="{{ value }}"{{#if is_disabled }} disabled{{/if}} />
    <span class="glyphicon glyphicon-remove revert-editable js-revert-editable" aria-hidden="true" tooltip="Reset"></span>
</div>
