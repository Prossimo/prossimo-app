<div class="drawing-controls">
    <button class="btn btn-xs" id="clear-frame">Clear frame</button>
    <button class="btn btn-xs" style="float: right;" id="change-view">Show outside view</button>
</div>

<div id="drawing" class="drawing-area" tabindex="0"></div>

<div class="popup-wrap" style="display: none">
    <div class="popup">
        <div style="text-align: center">
            <img class="split-section" data-type="vertical" src="/static/public/img/verticalMullion.png"/>
            <img class="split-section" data-type="horizontal" src="/static/public/img/horizontalMullion.png"/>
        </div>
        <div>
            <img class="change-sash-type" data-type="tilt_turn_left" src="/static/public/img/tilt_turn_left.png"/>
            <img class="change-sash-type" data-type="tilt_turn_right" src="/static/public/img/tilt_turn_right.png"/>
            <img class="change-sash-type" data-type="fixed_in_frame" src="/static/public/img/fixed_in_frame.png"/>
            <!-- <img class="change-sash-type" data-type="slide-right" src="/static/public/img/sash-slide-right.png"/> -->
        </div>
        <div>
            <img class="change-sash-type" data-type="tilt_only" src="/static/public/img/tilt_only.png"/>
            <img class="change-sash-type" data-type="turn_only_left" src="/static/public/img/turn_only_left.png"/>
            <img class="change-sash-type" data-type="turn_only_right" src="/static/public/img/turn_only_right.png"/>
            <img class="change-sash-type" data-type="fixed_in_sash" src="/static/public/img/fixed_in_sash.png"/>
            <!-- <img class="change-sash-type" data-type="slide-left" src="/static/public/img/sash-slide-left.png"/> -->
        </div>
        <div style="text-align: center">
            <img class="change-sash-type" data-type="flush-turn-right" src="/static/public/img/flush-turn-right.png"/>
            <img class="change-sash-type" data-type="flush-turn-left" src="/static/public/img/flush-turn-left.png"/>
        </div>
        <div class='panel-type' style="text-align: center">
            <img class="change-panel-type" data-type="solid" src="/static/public/img/panel-solid.png"/>
            <img class="change-panel-type" data-type="glass" src="/static/public/img/panel-glass.png"/>
        </dv>
    </div>
</div>
